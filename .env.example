# ============================================================================
# YouTube Shorts Automation - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual API keys and settings
# DO NOT commit .env to version control (it contains secrets)
# ============================================================================

# ============================================================================
# REQUIRED: Google APIs
# ============================================================================

# Groq API Key (LLM provider)
# Get it from: https://console.groq.com/
# This is the primary LLM provider for idea and script generation
LLM_PROVIDER=groq
GROQ_API_KEY=gsk_YOUR_GROQ_API_KEY_HERE
GROQ_MODEL=openai/gpt-oss-120b
GROQ_API_URL=https://api.groq.com/openai/v1

# Google Gemini API Key (alternative LLM)
# Get it from: https://ai.google.dev/
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ============================================================================
# REQUIRED: YouTube API (OAuth2)
# ============================================================================
# Get these from: https://console.cloud.google.com/
# Set up OAuth2 credentials (Desktop Application type)
# Instructions: See GITHUB_SECRETS_SETUP.md

# YouTube OAuth2 Client ID
YOUTUBE_CLIENT_ID=YOUR_YOUTUBE_CLIENT_ID.apps.googleusercontent.com

# YouTube OAuth2 Client Secret
YOUTUBE_CLIENT_SECRET=YOUR_YOUTUBE_CLIENT_SECRET_HERE

# YouTube Refresh Token (needed for GitHub Actions and headless deployments)
# Instructions: See GITHUB_SECRETS_SETUP.md
YOUTUBE_REFRESH_TOKEN=YOUR_YOUTUBE_REFRESH_TOKEN_HERE

# YouTube Access Token (auto-managed; leave empty)
YOUTUBE_ACCESS_TOKEN=

# ============================================================================
# OPTIONAL: Alternative TTS Providers
# ============================================================================

# TTSMaker API Key (for higher quality TTS, optional)
# Get it from: https://www.ttsmaker.com/api
# Leave empty to use free Google TTS (gTTS)
TTSMAKER_API_KEY=

# ============================================================================
# OPTIONAL: Stock Footage APIs
# ============================================================================

# Pexels API Key (for stock video/images)
# Get it from: https://www.pexels.com/api/
PEXELS_API_KEY=YOUR_PEXELS_API_KEY_HERE

# Pixabay API Key (alternative stock footage)
# Get it from: https://pixabay.com/api/
PIXABAY_API_KEY=YOUR_PIXABAY_API_KEY_HERE

# ============================================================================
# VIDEO SETTINGS
# ============================================================================

# Target video resolution (width x height)
# For YouTube Shorts: 1080x1920 (vertical)
# For long-form: 1920x1080 (horizontal)
VIDEO_RESOLUTION=1080x1920

# Video frames per second
VIDEO_FPS=24

# Target video duration (seconds)
# YouTube Shorts typically 15-60 seconds
# Recommended: 30 seconds minimum for better engagement
TARGET_VIDEO_DURATION=30

# Output video format
OUTPUT_FORMAT=short

# ============================================================================
# CONTENT & TOPIC SETTINGS
# ============================================================================

# Primary topic for Shorts generation
# Examples: "Python", "VS Code", "Git Commands", "Automation", "Dev Tools"
TARGET_TOPIC=Python

# Comma-separated list of topics to cycle through
TOPICS_ROTATION=Python Tricks,VS Code Shortcuts,Git Hacks,Docker Tips,Linux Commands,GitHub Actions,API Design,DevOps Best Practices

# Niche/category for content
CONTENT_NICHE=tech/coding

# ============================================================================
# BATCH & SCHEDULE SETTINGS
# ============================================================================

# Batch size for processing
BATCH_SIZE=1

# Upload schedule hours (legacy, kept for compatibility)
UPLOAD_SCHEDULE_HOURS=12
UPLOAD_SCHEDULE_HOUR=12

# Local timezone
LOCAL_TIMEZONE=Asia/Kolkata

# Dry run mode (test without uploading)
DRY_RUN=false

# Cleanup temporary files after generation
CLEANUP_TEMP=true

# ============================================================================
# SERVER & PORT SETTINGS
# ============================================================================

# Port for web server (if running Flask app)
PORT=8080

# Output directory for generated videos
OUTPUT_DIR=output

# Temporary directory for intermediate files
TEMP_DIR=./output/temp

# Log directory
LOG_DIR=output/logs

# Stock footage cache directory
STOCK_FOOTAGE_DIR=./output/stock_footage

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true

# Max log file size in MB before rotation
LOG_FILE_MAX_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================================================
# CAPTION SETTINGS
# ============================================================================

# Enable captions on video
CAPTIONS_ENABLED=true

# Caption format (srt, vtt, etc.)
CAPTIONS_FORMAT=srt

# Embed captions on video
CAPTIONS_EMBED_ON_VIDEO=true

# Caption font size
CAPTIONS_FONT_SIZE=40

# Caption font color (hex)
CAPTIONS_FONT_COLOR=#FFFFFF

# Caption background color (hex)
CAPTIONS_BG_COLOR=#000000

# Caption background transparency (0-1)
CAPTIONS_BG_ALPHA=0.5

# ============================================================================
# TTS (TEXT-TO-SPEECH) SETTINGS
# ============================================================================

# TTS provider (gtts, ttsmaker, etc.)
TTS_PROVIDER=gtts

# TTS language
TTS_LANGUAGE=en

# TTS speed (slow, normal, fast)
TTS_SPEED=normal

# ============================================================================
# YOUTUBE SETTINGS
# ============================================================================

# Video privacy status (public, private, unlisted)
YOUTUBE_PRIVACY_STATUS=public

# YouTube video category ID
# 28 = Science & Technology
YOUTUBE_CATEGORY_ID=28

# Auto-tag shorts with relevant keywords
AUTO_TAG_SHORTS=true

# ============================================================================
# MISC SETTINGS
# ============================================================================

# Keep intermediate files after generation
KEEP_INTERMEDIATE_FILES=false

# Verbose output
VERBOSE=false

# Note: See GITHUB_SECRETS_SETUP.md for how to configure secrets in GitHub Actions

# ============================================================================
# AUTOMATION & SCHEDULING SETTINGS (RENDER DEPLOYMENT)
# ============================================================================

# Number of shorts to generate per run
BATCH_SIZE=1

# Schedule interval in hours (how often to generate videos)
# This is used by APScheduler on Render as a fallback if UPLOAD_SCHEDULE_HOUR is not set
# Examples: 6 (every 6 hours), 12 (twice daily), 24 (daily)
UPLOAD_SCHEDULE_HOURS=12

# (Optional) Specific hour to run daily video generation (0-23, 24-hour format)
# If set, overrides UPLOAD_SCHEDULE_HOURS and schedules daily at this hour
# Examples: 12 (noon), 7 (7 AM), 19 (7 PM)
# Leave empty to use UPLOAD_SCHEDULE_HOURS interval instead
UPLOAD_SCHEDULE_HOUR=12

# Local timezone for daily scheduling (when UPLOAD_SCHEDULE_HOUR is set)
# Use pytz timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Examples: "America/New_York", "Europe/London", "Asia/Kolkata", "UTC"
LOCAL_TIMEZONE=Asia/Kolkata

# Enable dry-run mode (generate without uploading to YouTube)
DRY_RUN=false

# Automatically clean up temporary files after processing
CLEANUP_TEMP=true

# ============================================================================
# RENDER DEPLOYMENT SETTINGS
# ============================================================================

# HTTP Port (Render assigns this via environment)
# Default: 8080 (for free tier)
# Render will override this, but we set a local default
PORT=8080

# UptimeRobot will ping this endpoint to keep the app alive
# Endpoint: http://your-render-url/
# Configure UptimeRobot to check every 5 minutes

# ============================================================================
# PATHS (Auto-created if not set)
# ============================================================================

# Output directory for final videos, thumbnails, metadata
OUTPUT_DIR=./data/output

# Temporary directory for intermediate files
TEMP_DIR=./data/temp

# Logs directory
LOG_DIR=./logs

# Stock footage cache directory
STOCK_FOOTAGE_DIR=./data/stock_footage

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (in addition to console)
LOG_TO_FILE=true

# Maximum log file size (MB) before rotation
LOG_FILE_MAX_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================================================
# CAPTION & TEXT OVERLAY SETTINGS
# ============================================================================

# Enable automatic caption generation
CAPTIONS_ENABLED=true

# Caption format: "srt" or "vtt"
CAPTIONS_FORMAT=srt

# Embed captions directly on video
CAPTIONS_EMBED_ON_VIDEO=true

# Caption font size (pixels)
CAPTIONS_FONT_SIZE=40

# Caption text color (hex code)
CAPTIONS_FONT_COLOR=#FFFFFF

# Caption background color (hex code)
CAPTIONS_BG_COLOR=#000000

# Caption background transparency (0.0 - 1.0)
CAPTIONS_BG_ALPHA=0.5

# ============================================================================
# TTS SETTINGS
# ============================================================================

# TTS Provider: "gtts" (free, Google) or "ttsmaker" (optional, requires API key)
TTS_PROVIDER=gtts

# TTS Language
TTS_LANGUAGE=en

# Speech speed: "slow", "normal", "fast"
TTS_SPEED=normal

# ============================================================================
# YOUTUBE UPLOAD SETTINGS
# ============================================================================

# Privacy status: "public", "unlisted", "private"
YOUTUBE_PRIVACY_STATUS=public

# Video category ID (28 = Science & Technology, 27 = Education)
YOUTUBE_CATEGORY_ID=28

# Automatically tag video as Shorts (adds #Shorts to title/description)
AUTO_TAG_SHORTS=true

# Enable scheduled upload (if True, requires SCHEDULE_UPLOAD_TIME)
SCHEDULE_UPLOAD=false

# Scheduled upload time (ISO 8601 format, e.g., "2024-12-05T07:00:00Z")
# Leave empty for immediate upload
SCHEDULE_UPLOAD_TIME=

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Enable verbose/debug output
VERBOSE=false

# Keep intermediate files for debugging (if CLEANUP_TEMP=false)
KEEP_INTERMEDIATE_FILES=false

# Test mode (simulates API calls without actual API requests)
TEST_MODE=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
